#%RAML 1.0 Library

uses:
  types: https://developer.service.hmrc.gov.uk/api-documentation/assets/common/modules/types.raml

traits:
  contentTypeJson:
    headers:
      Content-Type:
        description: Specifies the format of the request body, which must be JSON.
        type: string
        required: true
        example: application/json
  acceptJson:
    headers:
      Accept:
        description: Specifies the response format and the version of the API to use.
        type: string
        required: true
        example: 'application/vnd.hmrc.1.0+json'
  acceptJson:
    headers:
      Authorization:
        description: Authorization header based on OAuth2 token
        type: string
        required: true
        example: 'Bearer QWA8BdXvGvQjqf2c4Cmql81yuW4a'
  acceptJson:
    headers:
      Environment:
        description: Mandatory. Environment to be used
        type: string
        required: true
        example: 'ist0'
  acceptJson:
    headers:
      CorrelationId:
        description: A UUID identifier of the transaction.
        type: string
        required: true
        example: 'a1e8057e-fbbc-47a8-a8b4-78d9f015c253'
  acceptJson:
    headers:
      OriginatorId:
        description: Mandatory. Consumer ID
        type: string
        required: true
        example: 'DA2_DWP_REG'
